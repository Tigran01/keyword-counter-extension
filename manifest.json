{
    "manifest_version": 3,
    "name": "Keyword Counter",
    "version": "1.0.0",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/find.png",
        "48": "icons/find.png",
        "128": "icons/find.png"
      }
    },
    "options_page": "options.html",
    "background": {
      "service_worker": "background.js"
    }
  }
  